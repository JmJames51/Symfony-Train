{% extends 'base.html.twig' %}
{% block body %}
	<div>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button>Search</button>
		{{ form_end(form) }}
	</div>

	<h1>Toutes les séries disponible</h1>
	{% for program in programs %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}
				- Catégorie :
				{{ program.category.name }}</h2>
			<p>{{ program.synopsis }}</p>
			{# Lien vers la fiche de la série : #}
			<a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
		</div>
	{% else %}
		<p>Aucune série trouvé</p>
	{% endfor %}
	<div>
		<a href="{{ path("program_new")}}">
			Ajouter une nouvelle série</a>
	</div>
{% endblock %}
