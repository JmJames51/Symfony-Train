{% extends 'base.html.twig' %}
{% block title %}
	{{ program.title }}
{% endblock %}

{% block body %}
	<div class="media">
		<img class="image" src="{{ asset('upload/') ~ program.poster }} " alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.synopsis }}</p>
			<p>Catégorie :{{ program.category.name }}</p>
			{% for season in program.seasons %}
				<a href="{{ path('program_show_season', { program_id: program.id, season_id: season.id}) }}">Saison : {{season.number}} </a>
				<p>Synopsis : {{season.description}} </p>
			{% endfor %}
		</div>
	</div>

	<a href="{{ path('program_index') }}">Retour à la liste des programmes</a>
{% endblock %}
